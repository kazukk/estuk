
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form-signin") do |f| %>

<h2 class="text-center">Change your password</h2>

  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden, lable: false, placeholder: "Reset password", html_input: {class: "form-control"} %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, label: "New password", required: true, autofocus: true, lable: false, placeholder: "Password", html_input: {class: "form-control"}  %>
    <%= f.input :password_confirmation, label: "Confirm your new password", required: true lable: false, placeholder: "Confirm Password", html_input: {class: "form-control"}  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Change my password" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
